@model Department
@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-6">
        <form asp-action="Edit" asp-controller="Department">
            <input hidden asp-for="Id" />
            <div class="form-group">
                <label asp-for="@Model.code" class="col-form-label"></label>
                <input asp-for="@Model.code" class="form-control" />
                <span asp-validation-for="@Model.code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Name" class="col-form-label"></label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <br />
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-light">Back To Department List</a>
           @*  <partial name="_CreateAndUpdatePartialView" /> *@
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
